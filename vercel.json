{
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/graphql",
      "destination": "/api/graphql"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/graphql.js": {
      "maxDuration": 30
    }
  }
}