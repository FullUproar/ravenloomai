{
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/graphql",
      "destination": "/api/graphql"
    },
    {
      "source": "/api/check-alerts",
      "destination": "/api/check-alerts"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/graphql.js": {
      "maxDuration": 30
    },
    "api/check-alerts.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/check-alerts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/send-digests",
      "schedule": "0 * * * *"
    }
  ]
}